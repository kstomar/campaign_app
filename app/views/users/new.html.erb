<%= form_with(model: @user, url: users_path) do |form| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div class="field">
    <%= form.label :campaigns_list, 'Campaigns List (JSON)' %>
  </div>

  <div class="field">
    <%= form.label :campaign_name %>
    <%= form.text_field :campaigns_name, name: "user[campaigns_list][campaign_name]" %>
  </div>

  <div class="field">
    <%= form.label :campaign_id %>
    <%= form.text_field :campaigns_id, name: "user[campaigns_list][campaign_id]" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

  <%= link_to "Back to users", users_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>

<% end %>